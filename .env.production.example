# Blue-Star Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===================
# Database Configuration
# ===================
DB_HOST=blue-star-postgres
DB_PORT=5432
DB_USERNAME=blue_star_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=blue_star_db
DB_SSL=false

# ===================
# Backend Configuration
# ===================
FINANCIAL_MODELING_PREP_API_KEY=your_api_key_here

# ===================
# Frontend Build-time Variables (Vite)
# ===================
VITE_API_URL=/api

# Kinde Authentication
VITE_KINDE_CLIENT_ID=your_kinde_client_id
VITE_KINDE_DOMAIN=your_domain.kinde.com
VITE_KINDE_AUDIENCE=your_kinde_audience
VITE_KINDE_REDIRECT_URI=https://your-domain.com/callback
VITE_KINDE_LOGOUT_URI=https://your-domain.com

